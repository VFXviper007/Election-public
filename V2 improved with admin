                                   text_color="white")
        self.main_title.pack(pady=(20, 5))

        # Subtitle
        self.subtitle = CTkLabel(self.title_container,
                                 text="Digital Voting Platform",
                                 font=CTkFont(family="Segoe UI", size=16, weight="normal"),
                                 text_color="#cbd5e1")
