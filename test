        y = (self.admin_window.winfo_screenheight() // 2) - (350)
        self.admin_window.geometry(f"1000x700+{x}+{y}")

        self.admin_window.grab_set()

        # Header
        header = CTkFrame(self.admin_window, height=80, corner_radius=0,
